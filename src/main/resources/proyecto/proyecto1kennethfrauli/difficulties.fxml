<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

    
<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyecto.proyecto1kennethfrauli.DifficultiesController">
    
    <Label text="Seleccione la dificultad:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <Button fx:id="easyButton" text="Fácil" onAction="#setEasy"/>
    <Button fx:id="mediumButton" text="Medio" onAction="#setMedium"/>
    <Button fx:id="hardButton" text="Difícil" onAction="#setHard"/>
    
    <Button fx:id="backButton" text="Volver" onAction="#switchToPrimary"/>

</VBox>