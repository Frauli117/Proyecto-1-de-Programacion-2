<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="128.0" prefWidth="398.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyecto.proyecto1kennethfrauli.PlayController">

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Batalla Naval" />

    <HBox alignment="CENTER" spacing="20">
        <VBox>
            <Label text="Tablero Jugador" />
            <GridPane fx:id="playerBoard" gridLinesVisible="true" style="-fx-border-color: black; -fx-border-width: 2px;" />
        </VBox>

        <VBox>
            <Label text="Tablero Enemigo" />
            <GridPane fx:id="enemyBoard" gridLinesVisible="true" style="-fx-border-color: black; -fx-border-width: 2px;" />
        </VBox>
    </HBox>

    <Label fx:id="messageLabel" alignment="CENTER" prefWidth="400" style="-fx-text-fill: blue;" wrapText="true" />
   <Button fx:id="finishButton" mnemonicParsing="false" onAction="#onFinishGame" text="Terminar juego" />

</VBox>
